@{
    ViewData["Title"] = "Quadrants";
}

@model List<ToDo>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h2>Quadrant 1</h2>
                    <table class="table">
                        <thead class="fw-bold">
                            <tr>
                                <td>TaskId</td>
                                <td>Task</td>
                                <td>DueDate</td>
                                <td>Quadrant</td>
                                <td>Category</td>
                                <td>Completed</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model.Where(x => x.Quadrant == 1))
                            {
                                <tr>
                                    <td>@x.TaskId</td>
                                    <td>@x.Task</td>
                                    <td>@x.DueDate</td>
                                    <td>@x.Quadrant</td>
                                    <td>@x.Category</td>
                                    <td>@x.Completed</td>
                                    <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                    <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
                                </tr>
                            }
